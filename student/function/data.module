}

function get_course_registered($conn){

    $studentID = $_SESSION['studentID'];
    $year = $_GET['y'];
    $semesterID = $_GET['s'];

    $sql="SELECT * FROM `school_data`.`get_course_registrated` where studentID='$studentID' and yearID='$year' and semesterID='$semesterID'";
    $result = mysqli_query($conn,$sql);
    if ($result->num_rows > 0){
        while ($r=$result->fetch_assoc()){
            echo"
                <tr>
                    <td>{$r['course_code']}</td>
                    <td>{$r['course']}</td>
                    <td>{$r['credit']}</td>
                    <td><a href='index.php?submit=remove.reg.course&d={$r['regID']}'>Remove</a></td>
                    <td></td>
                </tr>";

        }
    }
}
